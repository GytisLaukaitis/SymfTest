{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <style>
        .wrapper {
            margin: 1em auto;
            width: 95%;
        }
    </style>

    <div class="wrapper">
        <h1>Customers</h1>
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">email</th>
                <th scope="col">Phone number</th>
            </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ customer.firstName }}</td>
                    <td>{{ customer.lastName }}</td>
                    <td>{{ customer.email }}</td>
                    <td>{{ customer.phoneNumber }}</td>
                    <td>
                        <a href="/customer/{{customer.id}}" class="btn btn-dark m-1">Show</a>
                        <a href="/customer/edit/{{customer.id}}" class="btn btn-light m-1">Edit</a>
                        <a href="/customer/delete/{{customer.id}}" class="btn btn-danger delete-article m-1" data-id="{{ customer.id}}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
